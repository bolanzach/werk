{
  "name": "@werk/mcp-server",
  "version": "1.0.0",
  "tasks": {
    "dev-mcp": "deno run --watch --allow-net --allow-read --allow-write --allow-env --allow-run src/mcp.ts",
    "run-mcp": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run src/mcp.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  }
}